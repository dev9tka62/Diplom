<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAE5E2"
    android:orientation="vertical">

    <Button
        android:id="@+id/make_new_diet_button"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="@string/make_a_new_diet_for_the_week"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/ration_recycle_view"
        app:layout_constraintEnd_toEndOf="@+id/ration_recycle_view"
        app:layout_constraintStart_toStartOf="@+id/ration_recycle_view"
        app:layout_constraintTop_toBottomOf="@+id/make_new_diet_button" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/ration_recycle_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/make_new_diet_button" />


</androidx.constraintlayout.widget.ConstraintLayout>